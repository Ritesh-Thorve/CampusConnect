datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  googleId  String?  @unique
  profiles  Profile?
  createdAt DateTime @default(now())
}

model Profile {
  id              String @id @default(uuid())
  userId          String @unique
  user            User   @relation(fields: [userId], references: [id])
  fullName        String
  profileImg      String?
  collegeName     String
  collegeAddress  String
  fieldOfStudy    String
  graduationYear  Int
  collegeImage    String?
  collegeIdCard   String?
  bio             String?
  linkedIn        String?
  twitter         String?
  github          String?
}

model Update {
  id        String   @id @default(uuid())
  title     String
  type      String
  details   String
  link      String?
  createdAt DateTime @default(now())
}

model Trend {
  id          String   @id @default(uuid())
  title       String
  description String
  tag         String
  createdAt   DateTime @default(now())
}

model Payment {
  id            String   @id @default(uuid())
  userId        String
  amount        Int
  razorpayId    String
  status        String
  createdAt     DateTime @default(now())
}
