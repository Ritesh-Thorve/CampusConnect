generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  googleId   String?
  createdAt  DateTime  @default(now())
  fullname   String
  password   String?
  provider   String
  updatedAt  DateTime  @updatedAt
  supabaseId String?   @unique
  isPremium  Boolean   @default(false)
  payments   Payment[]
  profile    Profile?
  trends     Trend[]
  updates    Update[]
}

model Profile {
  id             String   @id @default(uuid())
  userId         String   @unique
  fullName       String
  profileImg     String?
  collegeName    String
  collegeAddress String
  fieldOfStudy   String
  graduationYear Int
  collegeImage   String?
  collegeIdCard  String?
  bio            String?
  linkedIn       String?
  twitter        String?
  github         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id])
}

model Update {
  id        String   @id @default(uuid())
  title     String
  type      String
  details   String
  link      String?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Trend {
  id          String   @id @default(uuid())
  title       String
  description String
  tag         String
  createdAt   DateTime @default(now())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
}

model Payment {
  id         String   @id @default(uuid())
  userId     String
  amount     Int
  razorpayId String
  status     String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}
