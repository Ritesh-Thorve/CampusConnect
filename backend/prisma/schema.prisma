datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String     @id @default(cuid())
  supabaseId String?    @unique
  fullname   String
  email      String     @unique
  password   String?
  googleId   String?
  provider   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  profile    Profile?
  updates    Update[]
  trends     Trend[]
  payments   Payment[]
}

model Profile {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])
  fullName       String
  profileImg     String?
  collegeName    String
  collegeAddress String
  fieldOfStudy   String
  graduationYear Int
  collegeImage   String?
  collegeIdCard  String?
  bio            String?
  linkedIn       String?
  twitter        String?
  github         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Update {
  id        String   @id @default(uuid())
  title     String
  type      String
  details   String
  link      String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Trend {
  id          String   @id @default(uuid())
  title       String
  description String
  tag         String
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model Payment {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  amount     Int
  razorpayId String
  status     String
  createdAt  DateTime @default(now())
}
